@model List<ResultSliderDto>

@{
    ViewData["Title"] = "Sliders";
    ViewData["h1"] = "Slider actions";
    ViewData["v1"] = "Dashboard";
    ViewData["v2"] = "Slider";
    ViewData["v3"] = null;

    var counter = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var slider in Model)
                            {
                                counter++;
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@slider.Title</td>
                                    <td>@slider.Description</td>
                                    <td>
                                        <img src="@slider.ImageUrl" alt="Slider Image" width="100" height="60" />
                                    </td>
                                    <td>
                                        @if (slider.Status)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-controller="Slider" asp-route-id="@slider.SliderId" class="btn btn-success">Update</a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-controller="Slider" asp-route-id="@slider.SliderId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this slider?');">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="Slider" asp-action="Create" class="btn btn-primary">Create new Slider</a>
                </div>
            </div>
        </div>
    </div>
</section>