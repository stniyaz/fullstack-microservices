@model List<ResultCategoryDto>

@{
    ViewData["Title"] = "Categories";
    ViewData["h1"] = "Category actions";
    ViewData["v1"] = "Dashboard";
    ViewData["v2"] = "Category";
    ViewData["v3"] = null;

    var counter = 0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ctg in Model)
                            {
                                counter++;
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>@ctg.CategoryName</td>
                                    <td>
                                        <a asp-action="update" asp-controller="category" asp-route-id="@ctg.CategoryId" class="btn btn-success">Update</a>
                                    </td>
                                    <td>
                                        <a asp-action="delete" asp-controller="category" asp-route-id="@ctg.CategoryId" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-controller="category" asp-action="create" class="btn btn-primary">Create new Category</a>
                </div>
            </div>
        </div>
    </div>
</section>